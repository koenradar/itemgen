<UserControl x:Class="view.StatsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="StatList" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Margin="0,32,0,0" SelectionChanged="StatList_SelectionChanged">
            <ListViewItem x:Name="AverageMain"></ListViewItem>
            <ListViewItem x:Name="AverageCross"></ListViewItem>
        </ListView>
    </Grid>
</UserControl>
